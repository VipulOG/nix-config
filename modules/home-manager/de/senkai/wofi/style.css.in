#outer-box {
  padding: 20px;
  border: 3px solid COLOR_BASE0D;
}

#input {
  border: 0;
  padding: 8px 12px;
}

#scroll {
  margin-top: 20px;
}

#img {
  padding-right: 8px;
}

#text:selected {
  color: COLOR_BASE00;
}

#entry {
  padding: 6px;
}

#entry:nth-child(odd) {
  background-color: COLOR_BASE00;
}

#entry:nth-child(even) {
  background-color: COLOR_BASE00;
}

#entry:selected {
  background-color: COLOR_BASE0D;
}

#input,
#entry:selected {
  border-radius: 0;
}
